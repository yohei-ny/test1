<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>hoppend error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>  <%= f.submit 'Create Book' %>
<% end %>
